{
  "extends": "../../resources/tsconfig.base.esm.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./esm",
    "composite": false,
    "jsx": "react",
    "baseUrl": ".",
    "target": "ES5",
    "module": "CommonJS",
    "lib": ["DOM", "ESNext"]
  },
  "include": ["src"],
  "exclude": [
    "**/__tests__/**",
    "**/dist/**.*",
    "**/*.spec.ts",
    "**/*.spec.js",
    "**/*-test.ts",
    "**/*-test.js",
    "**/*.stories.js",
    "**/*.stories.ts"
  ],
  "references": [{
    "path": "../graphiql-toolkit"
  }]
}
